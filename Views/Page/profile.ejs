<!-- meta css info  -->
<%- include ../partials(css-js)/head %>

  <%- include ../partials/Header %>

    <div class="container">
      <div class="row">
        <main>
          <h1 class="text-center">Thông tin của <%= account.User.Username %></h1><br>
          <form class="form-horizontal" action="" method="post">
            <div class="media">
              <div class="media-left">
                <img src="../images/<%= user.User.Avatar_Img %>" class="img-circle media-object" style="width:60px;">
              </div>
              <div class="media-body">
                <h4 class="media-heading"><%= account.User.Username %></h4>
                <p>Lorem ipsum...</p>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="email">Email:</label>
              <div class="col-sm-5">
                <input type="email" class="form-control" id="email" placeholder="<%= account.email %>" name="email" disabled>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="pwd">Password:</label>
              <div class="col-sm-5">
                <input type="password" class="form-control" id="pwd" placeholder="*******" name="pwd" disabled>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="email">Thông tin:</label>
              <div class="col-sm-5">
                <input type="text" class="form-control" id="user-info" placeholder="<%= account.User.Info %>" name="user-info">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="email">Số điện thoại:</label>
              <div class="col-sm-5">
                <input type="tel" class="form-control" id="user-phone" placeholder="<%= account.User.Phone %>" name="user-phone">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Lưu</button>
                <a type="button" href="/" class="btn btn-default">Huỷ</a>
              </div>
            </div>
          </form>
        </main>
      </div>
    </div>

    <%- include ../partials/Footer %>

      <!-- js -->
      <%- include ../partials(css-js)/foot %>
